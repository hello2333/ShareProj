<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:id="@+id/iv_detail_follow_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user1p"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/tv_detail_follow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蝶恋花"
                android:padding="5dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_detail_follow_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_center_context"
                android:lineSpacingExtra="2dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_detail_follow_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第7楼"/>
                <ImageView
                    android:id="@+id/iv_detail_follow_comm"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/comment"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/font_black_5"/>
            <ListView
                android:layout_marginTop="5dp"
                android:id="@+id/lv_detail_follow_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/font_black_5"/>
</LinearLayout>